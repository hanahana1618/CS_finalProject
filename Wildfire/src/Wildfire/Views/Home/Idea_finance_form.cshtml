@model Wildfire.Models.Idea
@{
    ViewData["Title"] = "Idea";
}
<h2>@ViewData["Message"]</h2>

<form asp-action="IdeaFinanceView">
 @if (Model.Finance == 1)
 {
    <p>How much money do you need to complete the project.</p>
    <p>Financial Goal: <input type="number" name="Goal" size="6" placeholder="$0.00" /></p><br /><br />
 }
 @if (Model.Skills == 1)
 { 
     <p>What skills are required to complete the project.</p>
     <p>Skills:
     <input type="text" name="skill" placeholder="position" /> Category:
