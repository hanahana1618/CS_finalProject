        <option value="SkillCat">Skill Category3</option>
    </select> <input type="button" value="Add"/><p></p></p><br /><br />
 }
 @if (Model.Petition == 1)
 {
    <p></p>
     <p>Petition:</p>
     <p>How many signatures do you need? <input type="text" name="num_signatures" size="5"/></p>
 }



    @*PROGRESS BAR*@
